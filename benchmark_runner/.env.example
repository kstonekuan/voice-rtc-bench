# Benchmark Runner Configuration

# =============================================================================
# Echo Agent API Configuration
# =============================================================================
# URL of the echo agent that creates rooms on-demand
ECHO_AGENT_URL=http://localhost:8080

# =============================================================================
# Benchmark Configuration
# =============================================================================
ITERATIONS=100
TIMEOUT_MS=5000
COOLDOWN_MS=100
LOCATION_ID=us-west-2  # Identifier for this deployment location

# =============================================================================
# AWS Timestream Configuration (for storing results)
# =============================================================================
AWS_REGION=us-west-2
TIMESTREAM_DATABASE=voice-rtc-benchmarks
TIMESTREAM_TABLE=latency_measurements

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

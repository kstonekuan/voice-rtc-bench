# Voice RTC Benchmark - Unified Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# Echo Agent API Configuration
# =============================================================================
# URL of the echo agent that creates rooms on-demand
ECHO_AGENT_URL=http://localhost:8080

# API server configuration (for the echo agent)
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Daily Configuration
# =============================================================================
# REQUIRED: Daily API key for creating rooms on-demand
# Get your API key from: https://dashboard.daily.co/developers
DAILY_API_KEY=your-daily-api-key-here

# =============================================================================
# LiveKit Configuration
# =============================================================================
# REQUIRED: LiveKit server URL, API key, and secret
# Get your credentials from: https://cloud.livekit.io
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# Benchmark Configuration
# =============================================================================
ITERATIONS=100
TIMEOUT_MS=5000
COOLDOWN_MS=100
LOCATION_ID=us-west-2  # Identifier for this deployment location

# =============================================================================
# Amazon Timestream for InfluxDB 3 Configuration (for storing results)
# =============================================================================
# REQUIRED: InfluxDB endpoint URL from AWS console (copy the full URL including port)
# Format: https://<instance-id>.timestream-influxdb.<region>.on.aws:<port>
INFLUXDB_URL=https://your-instance-id.timestream-influxdb.us-west-2.on.aws:8086

# REQUIRED: InfluxDB authentication token (found in AWS Secrets Manager)
INFLUXDB_TOKEN=your-influxdb-auth-token-here

# OPTIONAL: InfluxDB organization name (default: "default")
INFLUXDB_ORG=default

# OPTIONAL: InfluxDB database/bucket name
INFLUXDB_DATABASE=voice-rtc-benchmarks

# =============================================================================
# Logging
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

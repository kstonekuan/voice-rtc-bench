# Unified Echo Agent Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# API Server Configuration
# =============================================================================
# The agent exposes a FastAPI server for on-demand room creation
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Daily Configuration
# =============================================================================
# REQUIRED: Daily API key for creating rooms on-demand
# Get your API key from: https://dashboard.daily.co/developers
DAILY_API_KEY=your-daily-api-key-here

# OPTIONAL: Daily API URL (use default unless you have a custom deployment)
DAILY_API_URL=https://api.daily.co/v1

# =============================================================================
# LiveKit Configuration
# =============================================================================
# REQUIRED: LiveKit server URL, API key, and secret
# Get your credentials from: https://cloud.livekit.io
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# =============================================================================
# Optional Settings
# =============================================================================
# Custom agent names (for identification in rooms)
DAILY_AGENT_NAME=unified-daily-echo
LIVEKIT_AGENT_NAME=unified-livekit-echo

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
